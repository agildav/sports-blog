extends ../layout

block content
  br
  .row
    .col-md-7
      h2= title
    .col-md-5
      a(href=`/manage/articles/add` class='btn btn-primary btn-add float-r') Add article
  br
  table.table.table-hover.table-borderless
    thead.thead-dark
      tr
        th(scope='col') #
        th(scope='col') Article
        th(scope='col') Author
        th(scope='col') Created
        th
    tbody
      each article, i in articles
        tr
          th(scope='row') #{i + 1}
          td #{article.title}
          td #{article.author}
          td #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
          td
            a(href=`/manage/articles/edit/${article._id}` class='btn btn-secondary float-right') Edit
